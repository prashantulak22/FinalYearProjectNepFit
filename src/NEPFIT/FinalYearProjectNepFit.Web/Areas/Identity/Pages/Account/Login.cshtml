@page
@model LoginModel
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/login.css">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<section class="Form mt-1 mx-5">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="container">
        <div class="row no-gutters mb-3">
            <div class="col-lg-5">
                <img src="~/Images/login3.jpg" alt="Responsive image">
            </div>
            <div class="col-lg-7 px-5 pt-5">
                <h1 class="font-weight-bold py-3">NEPFIT</h1>
                <h1></h1>
                <form id="account" method="post">
                    <div class="form-row">
                        <div class="col-md-7">
                            <input type="email" asp-for="Input.Email" placeholder="EMAIL" class="form-control my-3 p-4">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-7">
                            <input type="password" asp-for="Input.Password" placeholder="*****" class="form-control  my-3 p-4">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-7">

                            <button type="submit" class=" btn1 mt-3 mb-5">Log in</button>
                        </div>
                    </div>

                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    <p>
                        Don't have an account ?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Register here</a>
                    </p>

                </form>

                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div class="form-row">

                        <div class="col-md-7">
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn1 btn-primary " name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </div>

                </form>
            </div>

        </div>
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
